{
  "name": "ng-universal-demo",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "lint": "ng lint ng-universal-demo",
    "build:client-and-server-bundles": "del dist && ng build --prod && ng run ng-universal-demo:server:production",
    "build:prerender": "yarn build:client-and-server-bundles && yarn webpack:server && yarn generate:prerender",
    "build:prerender:server": "yarn webpack:server && yarn generate:prerender && yarn generate:prerender",
    "build:ssr": "yarn build:client-and-server-bundles && yarn webpack:server",
    "generate:prerender": "cd dist && node prerender",
    "test": "jest",
    "test:watch": "jest --watch",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:prerender": "cd dist/browser && http-server",
    "serve:ssr": "node dist/server",
    "docker:serve": "docker-compose build && docker-compose up"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.2",
    "@angular/common": "^6.1.2",
    "@angular/compiler": "^6.1.2",
    "@angular/core": "^6.1.2",
    "@angular/forms": "^6.1.2",
    "@angular/http": "^6.1.2",
    "@angular/platform-browser": "^6.1.2",
    "@angular/platform-browser-dynamic": "^6.1.2",
    "@angular/platform-server": "^6.1.2",
    "@angular/pwa": "0.7.3",
    "@angular/router": "^6.1.2",
    "@angular/service-worker": "^6.1.2",
    "@nguniversal/common": "^6.0.0",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "core-js": "^2.5.7",
    "rxjs": "6.2.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.7.3",
    "@angular/cli": "6.1.3",
    "@angular/compiler-cli": "6.1.2",
    "@angular/language-service": "6.1.2",
    "@types/node": "^10.5.8",
    "codelyzer": "^4.4.3",
    "cpy-cli": "^1.0.1",
    "del-cli": "^1.1.0",
    "express": "^4.16.3",
    "http-server": "^0.10.0",
    "husky": "0.14.3",
    "jest": "23.5.0",
    "jest-preset-angular": "6.0.0",
    "lint-staged": "7.2.0",
    "prettier": "1.14.2",
    "reflect-metadata": "^0.1.12",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "typescript": "~2.7.2",
    "webpack-cli": "^2.0.14"
  },
  "lint-staged": {
    "*.{ts,json,css,md}": [
      "prettier --parser typescript --write",
      "git add"
    ]
  }
}
